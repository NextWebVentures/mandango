<?php

    /**
     * Set the extra data (hydrate).
     *
     * @param array $data  The document data.
     * @param bool  $clean Whether clean the document.
     *
     * @return {{ class }} The document (fluent interface).
     */
    public function setExtraData($data)
    {

{# inheritance #}
{% if config_class.inheritance and 'single' == config_class.inheritance.type %}
        parent::setExtraData($data);
{% endif %}

{# fields #}
        $merger = function ($values, $map) use (&$merger) {
            $result = [];

            foreach ($map as $key => $innerMap) {
                if (isset($values[$key]) and is_array($innerMap)) {
                    $result[$key] = $merger($values[$key], $innerMap);

                } elseif(isset($values[$key])) {
                    $result[$key] = $values[$key];
                }
            }

            return $result;
        };

        // add extra data
        $this->extra = $merger($data, $data['_extra']);

        return $this;
    }

    public function getExtraData()
    {
        return $this->extra;
    }
